<?xml version="1.0" encoding="UTF-8"?>

<?import github.dennshirennshij.nodedev74.sorting_visual.gui.node.SortingWindow?>
<?import github.dennshirennshij.nodedev74.sorting_visual.gui.node.SortingDisplay?>
<?import github.dennshirennshij.nodedev74.sorting_visual.gui.node.TimerControl?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.MenuItem?>


<fx:root type="SortingWindow"
         minHeight="400.0" minWidth="200.0" prefWidth="-Infinity" prefHeight="-Infinity"
         fx:id="sortingWindow"
         fx:controller="github.dennshirennshij.nodedev74.sorting_visual.gui.controller.SortingWindowController"
         onMouseClicked="#selectWindow"
         xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane minHeight="-Infinity" minWidth="-Infinity" SortingWindow.hgrow="ALWAYS">
        <top>
            <ToolBar>
                <Label fx:id="checkoutCounter" text="Checks: 0"/>
                <Label fx:id="swapCounter" text="Swaps: 0" />
                <TimerControl fx:id="timer" text="0" />
                <HBox HBox.hgrow="ALWAYS" minWidth="-Infinity" />
                <Label fx:id="algorithmName" text="null" />
                <HBox HBox.hgrow="ALWAYS" minWidth="-Infinity" />
                <Button fx:id="syncButton" onAction="#SyncButtonAction" text="Sync" />
            </ToolBar>
        </top>
        <center>
            <SortingDisplay fx:id="sortingDisplay" />
        </center>
        <bottom>
            <ToolBar>
                <Button fx:id="startButton" onAction="#StartButtonAction" text="Start" />
                <HBox HBox.hgrow="ALWAYS" minWidth="-Infinity" />
                <SplitMenuButton fx:id="speedSetter" text="1x">
                    <items>
                        <MenuItem id="0.25" onAction="#SpeedChange" text="0.25x" />
                        <MenuItem id="0.5" onAction="#SpeedChange" text="0.5x" />
                        <MenuItem id="1" onAction="#SpeedChange" text="1x" />
                        <MenuItem id="2" onAction="#SpeedChange" text="2x" />
                        <MenuItem id="4" onAction="#SpeedChange" text="4x" />
                        <MenuItem id="10" onAction="#SpeedChange" text="10x" />
                        <MenuItem id="100" onAction="#SpeedChange" text="100x" />
                    </items>
                </SplitMenuButton>
                <HBox HBox.hgrow="ALWAYS" minWidth="-Infinity" />
                <Button fx:id="pauseButton" onAction="#PauseButtonAction" text="Pause" />
                <Button fx:id="stopButton" onAction="#StopButtonAction" text="Stop" />
            </ToolBar>
        </bottom>
    </BorderPane>
</fx:root>
