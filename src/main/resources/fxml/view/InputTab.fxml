<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root type="InputTab"
         fx:id="inputTab"
         fx:controller="github.dennshirennshij.nodedev74.sorting_visual.gui.controller.InputTabController"
         xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <GridPane minWidth="-Infinity" maxHeight="150.0">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="100.0" />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="120.0" prefWidth="120.0" />
        </columnConstraints>
        <children>
            <HBox>
                <TextArea maxHeight="50.0" maxWidth="-Infinity" fx:id="arrayInput" />
                <Button fx:id="emptyInput" onAction="#clearInput">
                    <graphic>
                        <ImageView fitHeight="16.0" preserveRatio="true">
                            <Image url="@../../assets/icon/trashbin-48x48.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.columnIndex="1">
                <VBox>
                    <Label text="Minimum"/>
                    <TextField fx:id="minValue" />
                </VBox>
                <VBox>
                    <Label text="Maximum" />
                    <TextField fx:id="maxValue" />
                </VBox>
                <VBox>
                    <Label text="Anzahl"/>
                    <TextField fx:id="sizeValue" />
                </VBox>
                <Button fx:id="randomArray" text="Random" onAction="#randomGenerator"/>
            </HBox>
        </children>
    </GridPane>
</fx:root>
